<div class="pin fixed flex-col">
    <div class="flex-shrink flex ng-block h-16">
        <div class="flex-1 flex bg-{{ if game.isComplete 'green' 'black'}}">
            <button
                class="flex-shrink w-1/4 bg-pink hover:bg-pink-light text-white border-pink-lighter font-bold py-2 px-4 rounded"
                onclick={{action 'newGame'}}>
                ðŸŽ² New Game
            </button>
            <div class="flex-1 text-center m-auto text-white">
                {{#if game.isComplete}}
                    <h1>Hurrah!! You Did it!</h1>
                {{else}}
                    <h3> {{game.correctCellCount}} of 100</h3>
                {{/if}}
            </div>

        </div>

        <div class="flex-1 bg-pink">
            <ColorPicker @color={{color}} @onChange={{action (mut color)}} />
        </div>
    </div>
    <div class="flex-1 flex bg-grey-lighter">
        <div class="flex-1 border-r-2 border-gray-dark border-dashed p-4">
            <div class="p-8">

            </div>
            <PictureGrid @picture={{game.templatePicture}} />
        </div>
        <div class="flex-1 p-4">
            <div class="p-8">
                <PictureGrid @picture={{game.playerPicture}} @isEditable={{true}} @color={{color}}
                    @onCellChange={{action 'changeCellColor'}} />
            </div>
        </div>
    </div>
</div>